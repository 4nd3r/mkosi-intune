#!/bin/sh -e

if [ "$1" != 'final' ]
then
    exit 0
fi

apt-get --yes update

apt-get --yes upgrade

apt-get --yes install \
    adwaita-icon-theme-full \
    cracklib-runtime \
    fonts-noto-cjk \
    fonts-noto-core \
    fonts-recommended \
    intune-portal \
    libnss3-tools \
    libpam-gnome-keyring \
    lsb-release \
    microsoft-edge-stable \
    opensc \
    polkitd \
    pulseaudio \
    sudo
