#!/bin/sh -e

cat > "$OUTPUTDIR/$_NAME.nspawn" << EOF
[Files]
Bind=/dev/dri
Bind=$_HOME/Desktop
Bind=$_HOME/Documents
Bind=$_HOME/Downloads
BindReadOnly=/run/pcscd/pcscd.comm
BindReadOnly=/run/user/$_UID/pulse/native:/run/host_pulse_native
BindReadOnly=/tmp/.X11-unix

[Exec]
Capability=all
PrivateUsers=no
ResolvConf=bind-host

[Network]
VirtualEthernet=no
EOF

cat > "$OUTPUTDIR/$_NAME.service" << EOF
[Service]
DevicePolicy=auto
DeviceAllow=
EOF
